{
  "private": true,
  "name": "@paulrobertlloyd/indiekit",
  "version": "0.1.0",
  "description": "An IndieWeb publishing toolkit",
  "keywords": [
    "indieweb",
    "micropub"
  ],
  "author": {
    "name": "Paul Robert Lloyd",
    "url": "https://paulrobertlloyd.com"
  },
  "license": "MIT",
  "homepage": "https://paulrobertlloyd.github.io/indiekit/",
  "bugs": "https://github.com/paulrobertlloyd/indiekit/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulrobertlloyd/indiekit.git"
  },
  "scripts": {
    "build:styles": "postcss packages/frontend/styles/app.css -o packages/app/static/app.css --config packages/frontend/postcss.config.js",
    "build": "npm run build:styles",
    "watch:app": "nodemon packages/app",
    "watch:styles": "postcss packages/frontend/styles/app.css -o packages/app/static/app.css --config packages/frontend/postcss.config.js --watch",
    "watch": "DEBUG=indiekit:* npm-run-all --parallel watch:*",
    "preinstall": "npx lerna bootstrap",
    "start": "node packages/app",
    "test": "ava --verbose",
    "coverage": "nyc ava"
  },
  "engines": {
    "node": "12.x"
  },
  "dependencies": {
    "lerna": "^3.21.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@indiekit/app": "file:packages/app",
    "@indiekit/config-jekyll": "file:packages/config-jekyll",
    "@indiekit/publisher-github": "file:packages/publisher-github",
    "ava": "^3.8.2",
    "coveralls": "^3.1.0",
    "dotenv": "^8.1.0",
    "ioredis": "^4.16.3",
    "ioredis-mock": "^4.19.0",
    "nock": "^12.0.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.0.1",
    "rewiremock": "^3.14.1",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2",
    "valid-url": "^1.0.9",
    "xo": "^0.30.0"
  },
  "ava": {
    "environmentVariables": {
      "NODE_ENV": "test"
    },
    "files": [
      "packages/support/**/**/*.test.js",
      "!test/helpers/*.js"
    ]
  },
  "nodemonConfig": {
    "ext": "css,js,json,md"
  },
  "nyc": {
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "xo": {
    "space": true,
    "rules": {
      "camelcase": [
        "warn",
        {
          "properties": "never"
        }
      ],
      "capitalized-comments": "warn",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "packageDir": [
            "./",
            "./packages/app",
            "./packages/config-jekyll",
            "./packages/publisher-github"
          ]
        }
      ]
    }
  }
}
